<% if post.open? %>
  <li class="media post post-<%= post.id %> content-bg">
<% else %>
  <li class="media post post-<%= post.id %> content-bg" style='background-color:#ffe5e5'>
<% end %>
    <div class="media-body">
      <div class="media-body">
        <div class="media-item-body">
            <div class='userwrap'>
              <div class='pull-left'>
                <div class='photo'>
                <%= link_to (image_tag post.user.profile.photo.thumb, :size => "36x36"), profile_path(post.user.profile)%>
                </div>
                <div class='username'>
                <%= render post.user %><br>
                <small><i> Posted <%= time_ago_in_words(post.created_at) %> ago</i></small>
                </div>
              </div>
              <% if post.proposal? %>
                <% if current_user.team_member?(@idea) and post.open? %>
                  <div class='pull-right'><%= button_to 'Close Proposal', close_proposal_path(post_id: post.id, idea_id: @idea.id), class: 'btn btn-danger' %></div><br><br>
                <% else %>
                  <div class='pull-right btn btn-xs disabled btn-danger core-team' style='margin-top:3px;'><b>Closed</b></div><br>
                <% end %>
              <% end %>
            </div>
          <br>
          <p class='doc'><%= post.content %></p>
          <hr style="color:#fff;background-color:#fff;border-color:#fff;" />
        </div>
      </div>
      <% if post.nil? %>
        <a href='javascript:void(0);' class='showanscomments'>Hide Post Comments</a>
        <br><br>
      <% end %>
      <div class="media-body answercomments">
        <ul class="media-list comments answer-comments">
          <% if post.nil? %>
            <%= render post.comments.includes(:user) %>
          <% end %>
        </ul>
        <p class="link-dis"> Add comment </p>
      </div>
    </div>
</li>

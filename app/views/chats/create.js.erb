publisher = client.publish('<%= j @url %>', {
  message: '<%= j render @chat %>'
});

publisher.callback(function() {
  $('#chat_body').val('');
  $('#new_chat').find("input[type='submit']").val('Submit').prop('disabled', false)
});
 
publisher.errback(function() {
  alert('There was an error while posting your message.');
  console.error();
});
<% (component.parts.sort_by {|p| p.created_at}).each do |part| %>
  <div class='row content-bg'>   
    <div class='col-md-8'>
      <% if part.display_link?(current_user)%>
        <%= link_to part.name, edit_part_path(id: part) %>
      <% else %>
        <h0 class='link-dis'>
          <%= part.name %>
        </h0>
      <% end %>

      <br>   
      <%= "Status: " %>
      <h0 class='statustext'>
        <%= "#{part.status}"%>
      </h0>
      <br>
    </div>
    <div class='col-md-4'>
      <div class='partstyle pull-right'>
        <div class='left'>
          <% if part.locked_or_disabled?(current_user) %>
            <%= button_to part.disabled_status, '', 
                :class => 'btn disabled btn-status', id: "#{part.id}"%>
          <% elsif part.display_button?(current_user) %>
            <%= button_to part.button_status, update_status_path(id: part), 
                :class => 'btn btn-inverse', id: "#{part.id}"%>
          <% else %>
            <p class='left'>Completed by: <br><%= link_to (part.user.name), profile_path(part.user.profile) %> </p>
            <p class='right'><%= link_to (image_tag part.user.profile.photo_url, :size => "32x32"), profile_path(part.user.profile)%></p>
          <% end %>     
        </div>
        <div class='right'><%= button_to part.equity, '', :class => 'btn disabled btn-equity'%></div>
      </div>
    </div>
  </div>
<% end %>

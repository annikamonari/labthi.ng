<% component.parts.each do |part| %>

  <%= link_to part.name, edit_part_path(id: part) %>
  <br>
  
  <%if part.status != 'Accepted' %>
    <%= button_to "#{part.button_status}", update_status_path(id: part), 
        :class => "btn btn-primary"%>
  <%end%>
  
  <%= "Status: #{part.status}"%><br>
<% end %>

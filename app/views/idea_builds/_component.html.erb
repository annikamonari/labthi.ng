<% (component.parts.sort_by {|p| p.created_at}).each do |part| %>
  <div class='content-bg'>
  <div class='row'>
    <div class='col-md-8'>
      <%= link_to part.name, edit_part_path(id: part) %><br>
      <%= "Status: " %> <strong><h0 class='statustext'><%= "#{part.status}"%></h0></strong><br>
    </div>

    <div class='col-md-4 col-md-push-3'>
      <%if part.status != 'Accepted' %>
        <%= button_to "#{part.button_status}", update_status_path(id: part), 
            :class => "btn btn-primary", id: "#{part.id}"%>
      <%end%>
    </div>
  </div>
  </div>
<% end %>

<% (component.parts.sort_by {|p| p.created_at}).each do |part| %>
  <div class='row content-bg'>
    
    <div class='col-md-8'>
      <% if part.display_link?(current_user) %>
        <%= link_to part.name, edit_part_path(id: part) %>
      <% else %>
        <h0 class='link-dis'>
          <%= part.name %>
        </h0>
      <% end %>

      <br>   
      <%= "Status: " %>
      <h0 class='statustext'>
        <%= "#{part.status}"%>
      </h0>
      <br>
    </div>

    <div class='col-md-4 col-md-push-3'>
      <% if part.locked? %>
        <%= button_to 'Locked', '', 
            :class => 'btn disabled btn-status', id: "#{part.id}"%>
      <% elsif part.display_button?(current_user) %>
        <%= button_to part.button_status, update_status_path(id: part), 
            :class => 'btn btn-inverse', id: "#{part.id}"%>
      <% elsif part.disabled_button? %>
        <%= button_to part.status, '', 
            :class => 'btn disabled btn-status', id: "#{part.id}"%>
      <%end%>
    </div>

  </div>
<% end %>
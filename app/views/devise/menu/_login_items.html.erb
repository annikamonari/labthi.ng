<% if user_signed_in? %>
  <li class="show-user-profile">
    <span class='userlink' style='float:right; display:inline; margin-top:-6px;'><br><%= render partial: 'users/user', locals: { user: current_user } %></span>
    <% if current_page?('/') %>
      <div style='float:left; display:inline; margin-top:5px; margin-right:5px;' id='1-div'>
        <a id="1-pop-link" 
            href="#" 
            data-toggle="popover" 
            data-content="it is of great importance that you complete your profile, specifically, the short bio about yourself. When you join teams of ideas or you contribute to an idea, this bio will shown in different places. Other users will be able to see your skills, experience and a bit about who you are. This will help them connect with you and invite you to work on projects they think you are suited for.">
          <%= image_tag 'labthinghelp.png', size: '30x30', id: '1-img' %>
          <span id='1-close' class='pull-left' style='display:none; position:absolute; top:5px; margin-left:-5px; color:#34495E;'>
            <b>x</b>
          </span>
        </a>      
      </div>
    <% end %>
  </li>
  <li>
    <%= link_to '', edit_user_registration_path(current_user), title: 'Edit your account settings', rel: 'tooltip', id: 'tooltip', class: ' glyphicon glyphicon-wrench settings' %>
    </a>
  </li>
  <li><%= link_to current_user.notifications.where(read: false).count.to_s, notifications_path, :class => "glyphicon glyphicon-flag notifications", :title => 'Notifications', "data-content" => "#{render partial: 'notifications/notifications', locals: { notifications: current_user.notifications }}" , rel: 'popover', 'data-toggle'=>"popover", id: 'notifications', remote: true %>
  </li>
  <li>
    <%= link_to('Sign out', destroy_user_session_path, :method => :delete) %>
  </li>

<% end %>


<!-- Accepts title variable to populate h2 tag -->

<h2>
  <%= defined?(title) ? title : "Sign up" %>
</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
  <%= f.text_field :name, autofocus: true, placeholder: "Name", class:"form-control" %></div>

  <div class="form-group">
  <%= f.email_field :email, placeholder: "Email", class:"form-control" %></div>

  <div class="form-group">
  <%= f.password_field :password, placeholder: "Password", class:"form-control" %></div>

  <div class="form-group">
  <%= f.password_field :password_confirmation, name: "Password confirmation", placeholder: "Password (Confirm)", class:"form-control" %></div>

  <div class="form-group"><%= f.submit "Register", :class => 'btn btn-lg btn-block btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>

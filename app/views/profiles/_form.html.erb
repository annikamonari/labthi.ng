<%= form_for @profile, url: @profile, :html => {:multipart => true} do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-12">
  <% if @profile.photo? %>
    <p align='center'>
      <%= image_tag @profile.photo.display, size: '180x180'  %>
    </p><br>
  <% end %>

    <div class="field" style='width:280px;margin-left:20px;'>
      <div class="form-group">
        <%= f.file_field :photo %>
        <% if @profile.photo? %>
          <p class="help-block">Change your profile picture.</p>
        <% else %>
          <p class="help-block">Upload a profile picture.</p>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.label :about %>
        <%= f.text_area :about, placeholder: "Tell the community about yourself..your interests, your experience." , class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :skills %>
        <%= f.text_field :skills, placeholder: "List your skills, e.g. programming in Java, UI design", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :country %>
        <%= f.text_field :country, placeholder: 'e.g. the UK', class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label 'Twitter' %>
        <%= f.text_field :website, placeholder: "e.g. @labthing", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label 'Github Username' %>
        <%= f.text_field :github, placeholder: "e.g. @labthing", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label 'Linkedin URL' %>
        <%= f.text_field :linkedin, placeholder: "e.g. https://www.linkedin.com/in/annikamonari", class:"form-control" %>
      </div>
    </div>
    <div class="actions" style='margin-left:20px;'>
      <%= f.submit 'Update Profile', :class => "btn btn-primary" %><br><br>
      <%= link_to 'Back', @profile %>
    </div>
  </div><br>
<% end %>

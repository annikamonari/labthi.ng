  <p>
    <%= image_tag @profile.photo.display %>
  </p>

  <p>
    <strong>Profession:</strong>
    <%= @profile.profession %>
  </p>
  <p>
    <strong>About:</strong>
    <%= @profile.about %>
  </p>
  <p>
    <strong>Age:</strong>
    <%= @profile.age %>
  </p>
  <p>
    <strong>Country:</strong>
    <%= @profile.country %>
  </p>

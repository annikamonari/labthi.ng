<% content_for :secondary_nav do %> 
  <div class="secondary-nav">
    <% if current_page?("/") %>
      <div style='float:left; height:40px; display:none;' id='2-div'>
        <a id="2-pop-link" 
             href="#" 
             data-toggle="popover"
             data-html="true" 
             data-content="<b>My Activity</b> shows you all of your most recent contributions to ideas in all phases. For example, it will list questions you've contributed to ideas in the <b>create</b> phase, or parts that you've started in the <b>build</b> phase. <b>My Followed Ideas Activity</b> shows you the most recent contributions submitted by all users to the ideas that you follow in all phases. It is akin to the <b>Activity</b> tab on an idea's create page.<br><br><b>My Followed Ideas</b> shows you a list of the ideas you follow along with your local reputation and equity in each of them.">
          <%= image_tag 'labthinghelp.png', size: '36x36', id: '2-img' %>
          <span id='2-close' class='pull-left' style='display:none; position:absolute; top:0; margin-left:-5px; color:#34495E;'>
           <b>x</b>
          </span>
        </a>      
      </div>
    <% end %>
    <%= link_to "My Activity", '/',
      class: 'btn btn-default ' + active_when(:controller => 'home', :action => 'dashboard')
    %>
    <%= link_to "My Followed Ideas Activity", '/followed_ideas',
      class: 'btn btn-default ' + active_when(:controller => 'home', :action => 'followed_ideas')
    %>
<% end %>

<% content_for :sidebar_right do %>
  <h4 style='font-family: "Montserrat" !important;'>My Followed Ideas</h4>
  <%= render 'users/followed_ideas', user: current_user %>
<% end %>
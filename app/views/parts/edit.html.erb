<h1>Editing <%= @part.name %></h1>

<% if @part.is_design? %>   
  <%=  render 'parts/design/design_display' %>
  <%=  render 'parts/design/design_form' %>
<% elsif @part.is_prototype? %>
  Add functionality for both prototype parts
<% else %>
  <%= render 'form' %>
<% end %>

<%= link_to 'Back', idea_build_path(@part.idea) %><br>

<% if @part.is_started? %>
  <%= link_to "Can't manage? Unstart", unstart_part_path, method: 'PUT' %>
<% end %>
      <ul>
      <% @aspect.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_area :title %>
    <%= f.label :brief %><br>
    <%= f.text_area :brief %>
    

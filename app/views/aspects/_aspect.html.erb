<% # This template is called from Idea#show %>
<li>
    <p>
    <strong>Aspect:</strong>
      <%= link_to aspect.title, aspect %>
      by
      <%= User.find(aspect.user_id).email %>
    </p>
    <p>
    <strong>Brief:</strong>
      <%= best_in_place aspect, :brief %>
    </p>
    <ul>
      <%= render Solution.where(aspect_id: aspect.id) || "No solutions found" %>   
      <p>
        <%= link_to "Add solution", controller: "solutions", action: "new", aspect_id: aspect.id %>
      </p>
    </ul>
</li>
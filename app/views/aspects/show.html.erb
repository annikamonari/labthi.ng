<p id="notice"><%= notice %></p>

<p>
  <h1><%= @aspect.title %></h1>
  <strong>Brief:</strong>
  <%= @aspect.brief %>
</p>

<% if defined? @answers %>
    <h4>Answers:</h4>
    <p>Number of answers: <%= @answers.count %></p>
    <% @answers.each do |answer| %>
        <p>
          <%= link_to answer.brief, answer %>
          by
          <%= answer.user.email %>
        </p>
    <% end %>
<% else %>
    <p id="notice">
    This aspect does not yet have a answer. Why don't you describe one?
    </p>
<% end %>

<%= link_to 'Edit', edit_aspect_path(@aspect) %>
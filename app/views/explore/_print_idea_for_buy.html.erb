<div class="idea-blockcreate col-sm-12 col-md-6 col-lg-6">
  <%= link_to idea, class: "idea-blockcreate-link list-group-item #{idea.title} clearfix" do %>
    <div class="clearfix" style='margin-bottom:10px;'>
      <div><strong><%= truncate(idea.title, length:50) %></strong></div>
      <% if idea.title.length < 41 %>
      <div class="pull-right" style='margin-top:-17px;'>
      <% else %>
      <div class="pull-right" style='margin-left:10px;margin-top:5px;'>
      <% end %>
        <%= image_tag idea.top_image_thumb, class: 'img-rounded imgpad' %>
      </div>
      <div class='doc' style='margin-right:5px;margin-top:5px;'>
        <%= truncate(idea.brief, length: 120) %>
      </div>     
    </div>
    <div class="clearfix pull-right full-width">
      <div class="pull-right" style=''>
        <div style='float:right;'><i>Phase <%= idea.phase %></i></div><br>
      </div>
      <div class='pull-left'>
        <b><%= render 'users/user_without_link', user: idea.user %></b><i> <%=time_ago_in_words(idea.created_at)%> ago</i><br>
      </div>
    </div>
  <% end %>
</div>
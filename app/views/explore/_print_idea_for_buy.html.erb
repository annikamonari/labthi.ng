<div class="idea-block col-sm-12 col-md-6 col-lg-6">
  <%= link_to idea, class: "idea-block-link list-group-item #{idea.title} clearfix" do %>
    <div classs="clearfix">
      <div><strong><%= idea.title %></strong></div>
      <div class="pull-right" style='margin-top:-17px;'>
        <%= image_tag idea.top_image_thumb, class: 'img-rounded imgpad' %>
      </div>
      <div style='margin-right:5px;'>
        <%= truncate(idea.brief, length: 120) %><br><br><br>
      </div>      
    </div>
    <div class="clearfix pull-right full-width">
        <div style='float:left;'>
          <strong style='color:#5cb85c;'>User votes:</strong> 
          <span class='badge-rep' style='background-color:#5cb85c;margin-right:5px;'><%= idea.get_use_votes %></span>
              <strong style='color:#34495E;'>Buyer votes:</strong> 
          <span class='badge-rep' style='background-color:#34495E;'><%= idea.get_buy_votes %></span>
        </div>
        <div style='float:right;'><i>Phase <%= idea.phase %></i></div><br>
    </div>
  <% end %>
</div>
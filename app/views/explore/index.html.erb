<% content_for :sidebar_left do %>
	<%= link_to "Submit Idea", '/ideas/new', class: 'btn btn-primary' %>
<% end %>

<% content_for :secondary_nav do %>
	<%= link_to "Phase 1", { controller: 'explore', phase: '1' }, class: 'btn btn-info' %>
	<%= link_to "Phase 2", { controller: 'explore', phase: '2' }, class: 'btn btn-info' %>
	<%= link_to "Phase 3", { controller: 'explore', phase: '3' }, class: 'btn btn-info' %>
<% end %>

<% if @ideas then %>
	<% @ideas.each do |idea| %>
		<%= render 'print_idea', :idea => idea %>
	<% end %>
<% else %>
		<%= render 'print_idea', :idea => @idea %>
<% end %>


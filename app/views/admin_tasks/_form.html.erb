<%= form_for @admin_task, url: create_admin_task_path do |f| %>
  <% if @admin_task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_task.errors.count, "error") %> prohibited this admin_task from being saved:</h2>

      <ul>
      <% @admin_task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h4>New Task</h4><br>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: "Summarise the tasks contents in a sentence.", class: 'form-control' %>
  </div><br>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: "Explain what needs to be fixed or improved (you can even quote the relevant submitted content or refer to specific line numbers), why this needs to happen and if possible, how it should be fixed or improved.", class: 'form-control' %>
  </div><br>
  <div class="actions">
    <%= f.submit "Create Task", class: 'btn btn-primary' %>
  </div>
<% end %>

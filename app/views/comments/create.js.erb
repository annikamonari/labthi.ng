var y = $("<%= j @commentable.class.to_s.downcase %>")

$(".js-inline-form").replaceWith("<%= j render @comment %>");
if($(y).selector == 'comment') {
		$("#<%= j @commentable.class.to_s.downcase + '-' + @commentable.id.to_s %>").text("Reply to comment");
}
else {
		$("#<%= j @commentable.class.to_s.downcase + '-' + @commentable.id.to_s %>").text("Add comment");
}
if($("div.no.comments").length > 0) {
	$("div.no.comments").remove()
}

location.reload();
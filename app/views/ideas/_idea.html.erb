<% if idea.phase == 2 %>
  <%= link_to idea_build_path(idea) do %>
    <% if controller.controller_name == 'home' %>
      <%= truncate(idea.title, length: 22) %>
    <% else %>
      <%= idea.title %>
    <% end %>
  <% end %>
<% else %>
  <%= link_to idea do %>
    <% if controller.controller_name == 'home' %>
      <%= truncate(idea.title, length: 22) %>
    <% else %>
      <%= idea.title %>
    <% end %>
  <% end %>
<% end %>

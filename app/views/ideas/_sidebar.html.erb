
<% content_for :sidebar_left do %>
  <p>
    <strong>Phase:</strong>
    <%= @idea.phase %>
  </p>

  <p>
    <strong>Brief:</strong>
    <%= @idea.brief %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= image_tag idea_top_image(@idea) %>
  </p>

  <p>
    <strong>Active:</strong>
    <%= @idea.active %>
  </p>

  <p>
    <strong>Components:</strong>
    <%= @idea.component_list %>
  </p>

  <p>
    <strong>Categories:</strong>
    <%= @idea.category_list %>
  </p>

  <p>
    <strong>User:</strong>
    <%= link_to @idea.user.name, @idea.user.profile %>
  </p>
<% end %>
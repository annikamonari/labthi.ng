<% profile = user.profile %>
<li class="white-bg">
  <div class="media">
    <%= link_to profile, class: "pull-left" do %>
      <%= image_tag(profile.photo.thumb, class:'media-object') %>
    <% end %>
    <div class="pull-left">
      <%= render 'users/user', user: user %>
      <br>
      <% if profile.profession %>
        <strong>Profession:</strong>
        <%= profile.profession %>
      <% end %>
      <strong>Points: </strong><%= points %>
    </div>
  </div>
</li>
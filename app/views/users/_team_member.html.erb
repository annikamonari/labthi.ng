<% profile = user.profile %>
<li class="white-bg">
  <div class="media">
    <%= link_to profile, class: "pull-left top" do %>
      <%= image_tag(profile.photo.thumb, size: '65x65', class: 'img-rounded') %>
    <% end %>
    <div>
      <%= render 'users/user', user: user %>
      <br>
      <% if profile.about %>
        <%= truncate(profile.about, length: 70) %>
      <% else %>
        <%= user.name %> does not have an <i>about</i> section on his profile yet.
      <% end %>
      <br>
      <div style='margin-left:70px;'>
        <div style='color:#5cb85c;float:left;margin-right:10px;'>
          <b>local reputation:</b> 
          <span class='badge-rep' style='background-color:#5cb85c;'>
            <%= points %>
          </span>
        </div>
      </div>
    </div>
  </div>
</li>